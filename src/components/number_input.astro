---
type Props = {
  id: string;
  label: string;
  value: number;
  min?: number;
  step?: number;
};

const { id, label, value, min, step } = Astro.props;
---

<div class="flex flex-col gap-y-0.5 text-xl md:text-sm">
  <label for={id}>{label}</label>
  <input
    class="border-b-[0.5px] border-slate-300 border-b-tokyo-comment bg-transparent px-1.5 py-1 outline-none focus:border-b-tokyo-fg"
    id={id}
    type="number"
    value={value}
    step={step}
    min={min}
  />
</div>
