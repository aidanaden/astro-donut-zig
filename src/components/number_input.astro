---
type Props = {
  id: string
  label: string
  value: number
  min?: number;
  step?: number;
}

const { id, label, value, min, step } = Astro.props;
---

<div class="flex flex-col gap-y-0.5 text-xl md:text-base">
		<label for={id}>{label}</label>
		<input class="rounded border-slate-300 border py-1 px-1.5" id={id} type="number" value={value} step={step} min={min}/>
</div>
